<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="category">
  <insert id="pinsert" >
    INSERT INTO primary_category (
    	pcategory_name,
    	reg_date
    ) VALUES (
    	#{categoryName},
    	 NOW()
    )
    <selectKey keyProperty="categoryId" resultType="Integer">
    SELECT LAST_INSERT_ID()
  	</selectKey>
  </insert>
  <select id="pcategory_list" resultType="categoryVO">
		SELECT * FROM primary_category;
	</select>
</mapper>